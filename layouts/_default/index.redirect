/authors domain=:id  /domains/:id/authors.json 200

# Every authors/?{taxonomy}={taxonomyTerm} redirects to {taxonomy}/{taxonomyTerm}/authors.json
{{- range $key, $value := .Site.Taxonomies }}
/authors {{ $key | singularize }}=:id  /{{ $key }}/:id/authors.json 200
{{- end }}

